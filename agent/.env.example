# Polygon Amoy RPC
RPC_URL=https://rpc-amoy.polygon.technology/

# Agent wallet private key (needs MATIC for gas)
AGENT_PRIVATE_KEY=your_private_key_here

# Deployed GuardianForge contract address
CONTRACT_ADDRESS=0xYourContractAddress

# Wallets to monitor (comma-separated)
MONITORED_WALLETS=0xWallet1,0xWallet2

# Groq API key (get free from console.groq.com)
GROQ_API_KEY=gsk_...

# Poll interval in ms (default 30 seconds)
POLL_INTERVAL=30000
